@using MyFootballProject.ViewModels
@model List<StadiumAddEditVM>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>StadiumIndex</title>
</head>
<body>
    @if(Model.Count>0)
    {
    <table border="1">
        <thead>
            <tr>
                <th>Name</th>
                <th>Founding date</th>
                <th>Address</th>
                <th>Capacity</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.FoundingDate</td>
                    <td>@item.Address</td>
                    <td>@item.Capacity</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
    else 
    {
    <span class="empty-result">No stadiums found :(</span>
    }
</body>
</html>
