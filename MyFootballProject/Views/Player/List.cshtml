@using MyFootballProject.ViewModels
@model List<PlayerAddEditVM>
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>List</title>
</head>
<body>
    <h1>Players' list</h1>
    @if(Model.Count>0)
    {
    <table border="1">
            <thead>
            <tr>
                <th>Image</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>DOB</th>
                <th>Country</th>
                <th>Position</th>
                <th>National Team</th>
                <th>Club</th>
                <th></th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img style="max-width:77px;" src="@item.ImageName"/></td>
                    <td>@item.FirstName</td>
                    <td>@item.LastName</td>
                    <td>@item.DOB</td>
                    <td>@item.Country</td>
                    <td>@item.Position</td>
                    <td>@item.NationalTeam</td>
                    <td>@item.ClubName</td>
                    <td>
                        <a asp-action="AddEdit" asp-route-id="@item.Id">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>                    
                    </td>
                </tr>
            }
        </tbody>
    </table>
    }
    else 
    {
    <span class="empty-result">No players found :(</span>
    }
    </table>
</body>
</html>
